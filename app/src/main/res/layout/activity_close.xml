<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Close">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listhead"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/choose"/>

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:id="@+id/r1"
        app:cardBackgroundColor="@android:color/white"
        android:layout_below="@+id/listhead"
        app:cardCornerRadius="15dp"


        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="16dp"
            android:id="@+id/n1"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:text="MURUGAN "
            />

        <TextView
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:text="Have a full work experience since 1992"
            android:textColor="#929292"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="15dp"
            android:text="98%"
            android:id="@+id/p1"
            android:textColor="#000"
            android:textSize="50dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:id="@+id/r2"
        app:cardBackgroundColor="@android:color/white"
        android:layout_below="@+id/r1"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"

        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="16dp"
            android:id="@+id/n2"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:text="JOY HOBO "
            />

        <TextView
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:text="Have a full work experience since 1990"
            android:textColor="#929292"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="15dp"
            android:text="95%"
            android:id="@+id/p2"
            android:textColor="#000"
            android:textSize="50dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:id="@+id/r3"
        app:cardBackgroundColor="@android:color/white"
        android:layout_below="@+id/r2"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"

        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="16dp"
            android:id="@+id/n3"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:text="CHANCHAD "
            />

        <TextView
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:text="Have a full work experience since 1987"
            android:textColor="#929292"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="15dp"
            android:text="92%"
            android:id="@+id/p3"
            android:textColor="#000"
            android:textSize="50dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:id="@+id/r4"
        app:cardBackgroundColor="@android:color/white"
        android:layout_below="@+id/r3"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"

        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="16dp"
            android:id="@+id/n4"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:text="RAJA "
            />

        <TextView
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:text="Have a full work experience since 2000"
            android:textColor="#929292"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="15dp"
            android:text="87%"
            android:id="@+id/p4"
            android:textColor="#000"
            android:textSize="50dp" />
    </android.support.v7.widget.CardView>


</RelativeLayout>